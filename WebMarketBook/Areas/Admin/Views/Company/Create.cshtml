@using Webmarket.Modelss
@model Company
@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<form method="post" class="bg-white">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2> Create Company</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All" class="text-danger"></div>*@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name"  class="form-control shadow-lg"/>
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>
           <div class="mb-3">
            <label asp-for="StreetAddress"></label>
            <input asp-for="StreetAddress"  class="form-control shadow-lg"/>
                       <span asp-validation-for="StreetAddress" class="text-danger"></span>

        </div>
          <div class="mb-3">
            <label asp-for="PhonNumber"></label>
            <input asp-for="PhonNumber"  class="form-control shadow-lg"/>
                      <span asp-validation-for="PhonNumber" class="text-danger"></span>

        </div>
          <div class="mb-3">
            <label asp-for="City"></label>
            <input asp-for="City"  class="form-control shadow-lg"/>
                      <span asp-validation-for="City" class="text-danger"></span>

        </div>
       
        <button type="submit" class="btn btn-outline-danger " style="width:150px"> Create</button>
        <a asp-controller="Company" asp-action="Index" class="btn btn-outline-primary " style="width:150px"> Back</a>
    </div>
</form>

          @section Scripts {
              <partial name="_ValidationScriptsPartial" />
          }
        