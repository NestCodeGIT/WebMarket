@model  IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
<partial name="_Notification" />

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />


<div class="container mt-3 bg-danger border shadow-lg">

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-white"> List Category </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-outline-primary"> <i class="bi bi-plus-circle-fill"></i> Create new Category</a>
        </div>

    </div>
  
  <p></p>            
      <table class="table table-dark table-striped table-bordered table-hover shadow-lg ">
        <thead>
              <tr >
                    <th> Name Category</th>
                    <th>View order</th>
                    <th>Time</th>
                    <th>

                    </th>
                    
              </tr>
        </thead>
            <tbody  >
                        @foreach (var obj in Model)
                    {
                          <tr >
                            <td >@obj.Name</td>
                           
                            <td>@obj.DesplayOrder</td>
                              <td>@obj.CreateDateTime.ToString()</td>
                              <td>
                                  <div class="w-75 btn-group" role="group">
                                      <a class="btn btn-outline-danger"     asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" ><i class="bi bi-pencil-square"></i>  Edit</a>
                                               <a class="btn btn-outline-warning" asp-controller="Category" asp-action="delete" asp-route-id="@obj.Id" >
                                                   <i class="bi bi-trash3"></i> Del
                                                </a>
                                  </div>
                              </td>
                          </tr>
                       
                    }
                
            </tbody>
      </table>
</div>